<h1>Order Details</h1>

<p>
  <strong>Product Name:</strong>
  <%= @order.product_name %>
</p>

<p>
  <strong>Product Count:</strong>
  <%= @order.product_count %>
</p>

<p>
  <strong>Customer:</strong>
  <%= @order.customer.full_name %>
</p>

<div class="d-flex align-items-center mt-3">
  <%= link_to 'Edit this Order', edit_order_path(@order), class: 'btn custom-button btn-sm me-2' %>
  <%= link_to 'Back to Orders', orders_path, class: 'btn custom-button btn-sm me-2' %>
  <%= button_to 'Delete this Order', @order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn custom-delete btn-sm' %>
</div>

